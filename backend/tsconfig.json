{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // or "ESNext", "Node16"
    "moduleResolution": "NodeNext", // or "Node16"
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "ts-node": {
    "logError": true,
    "pretty": true
  }
}